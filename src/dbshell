# Bash options:
set -e


if [ $# -ne 1 ] ; then
   echo >&2 "Usage: $0 configuration_file"
   exit 1
fi
CONFIGURATION_FILE="$1"
if [ ! -e "${CONFIGURATION_FILE}" ] ; then
   echo >&2 "ERROR: Use configuration ${CONFIGURATION_FILE} does not exist!"
fi


# ====== Read configuration file ============================================
dbbackend=""
dbserver=""
dbport=""
dbuser=""
dbpassword=""
database=""
dbcafile=""
dbcrlfile=""
configContent=$(sed -r '/[^=#]+=[^=]+/!d' <"${CONFIGURATION_FILE}" | sed -r 's/\s+=\s/=/g')
eval "${configContent}"


# ====== Build command line =================================================
command=""
if [ "${dbbackend}" == "MariaDB" ] ; then

   if [ "${dbport}" == "0" ] ; then
      dbport="3306"
   fi
   # shellcheck disable=SC2001
   command="mariadb --host=\"${dbserver}\" --port=${dbport} --protocol=tcp --user=\"${dbuser}\" --password=\"${dbpassword}\" --database=\"${database}\" --ssl-verify-server-cert --ssl-ca=\"${dbcafile}\" --ssl-crl=\"$(echo "${dbcrlfile}" | sed -e 's/^NONE$//g')\""

elif [ "${dbbackend}" == "PostgreSQL" ] ; then

   export PGPASSWORD="${dbpassword}"
   export PGSSLMODE="verify-full"
   export PGSSLROOTCERT="${dbcafile}"
   # shellcheck disable=SC2001,SC2155
   export PGSSLCRL="$(echo "${dbcrlfile}" | sed -e 's/^NONE$//g')"
   if [ "${dbport}" == "0" ] ; then
      dbport="5432"
   fi
   command="psql --host=\"${dbserver}\" --port=${dbport} --username=\"${dbuser}\" --dbname=\"${database}\""

elif [ "${dbbackend}" == "MongoDB" ] ; then

   if [ "${dbport}" == "0" ] ; then
      dbport="27017"
   fi
   command="mongosh \"mongodb://${dbserver}:${dbport}/${database}\" --username \"${dbuser}\" --password \"${dbpassword}\" --tls --tlsDisabledProtocols TLS1_0,TLS1_1,TLS1_2 --tlsCAFile \"${dbcafile}\""
   # FIXME: --tlsCRLFile \"${dbcrlfile}\" does not work!

else

   echo >&2 "ERROR: Invalid dbbackend setting \"${dbbackend}!\""
   exit 1

fi

echo -e "\x1b[34mConnecting to database ...\x1b[0m"
echo -e "\x1b[37m${command}\x1b[0m"
sh -c "${command}"
