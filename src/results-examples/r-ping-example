source("HiPerConTracer.R")


# ###### Print some RTT statistics ##########################################
printRTT <- function(rtt)
{
   # Convert to ms, or NA if not available (-1)
   rttInMS <- ifelse(rtt > 0, rtt / 1e6, NA)

   cat(sprintf("\x1b[32mmin=%1.6fms   Q10%%=%1.6fms \t \x1b[34mmean=%1.6fms \t \x1b[35mQ90%%=%1.6fms   max=%1.6fms\x1b[0m\n",
      min(rttInMS, na.rm = TRUE),
      quantile(rttInMS, 0.10, na.rm = TRUE),
      mean(rttInMS, na.rm = TRUE),
      quantile(rttInMS, 0.90, na.rm = TRUE),
      max(rttInMS, na.rm = TRUE)))
   # print(rttInMS)
}


# ###### Main program #######################################################

# ====== Handle arguments ===================================================
args <- commandArgs(trailingOnly = TRUE)
if(sys.nframe() == 0L) {
   # Launched directly from shell:
   args <- commandArgs(trailingOnly = TRUE)
   # ------ Command-line start with Rscript ---------------------------------
   if(length(args) < 1) {
     stop("Usage: r-ping-example ping-hpct-file|ping-csv-file|results-directory")
   }
   name <- args[1]
} else {
   # Launched via source(...) in R:
   name <- "ping.csv.gz"
   cat(paste(sep="", "Using default name ", name, "\n"))
}


# ====== Read input data ====================================================

# ------ Name is a directory ------------------------------------------------
if(dir.exists(name)) {
   cat(sep="", "Reading all Ping results in directory ", name, " ...\n")
   data <- readHiPerConTracerPingResultsFromDirectory(name, "Ping-[^/]*(\\.hpct|\\.results)[^/]*")
# ------ Name is a HiPerConTracer results file (.hpct*) ---------------------
} else if(grepl("(\\.hpct[^/]*|\\.results[^/]*)$", name)) {
   cat(sep="", "Reading from HiPerConTracer results file ", name, " ...\n")
   data <- readHiPerConTracerPingResults(name)
# ------ Name is a CSV file -------------------------------------------------
} else {
   cat(sep="", "Reading from CSV file ", name, " ...\n")
   data <- readHiPerConTracerPingResultsFromCSV(name)
}

cat("\x1b[33mData columns:\x1b[0m\n")

# ====== Processing example =================================================
for(measurementID in levels(factor(data$MeasurementID))) {
   for(sourceIP in levels(factor(data$SourceIP))) {
      for(destinationIP in levels(factor(data$DestinationIP))) {
         for(protocol in levels(factor(data$Protocol))) {
            dataSubset <- data %>% filter( MeasurementID == measurementID,
                                           SourceIP == sourceIP,
                                           DestinationIP == destinationIP,
                                           Protocol == protocol,
                                           Status == 255   # Only process successful Ping results!
                                         )
            if(length(dataSubset$RTT.App) > 0) {
               cat(sep="", "\x1b[33mMeasurement #", measurementID, ":   \x1b[35m",
                  sourceIP, " <-> ", destinationIP, " via ", protocol, "   \x1b[32m",
                  # Print time range:
                  as.character(min(dataSubset$Timestamp)), " - ",
                  as.character(max(dataSubset$Timestamp)), "\x1b[0m\n")
               cat("\x1b[34mApplication: ")
               printRTT(dataSubset$RTT.App)
               cat("\x1b[34mSoftware:    ")
               printRTT(dataSubset$RTT.SW)
               cat("\x1b[34mHardware:    ")
               printRTT(dataSubset$RTT.HW)
            }
         }
      }
   }
}
